<launch>
  <!-- 1. Start Gazebo with the arena/world -->
  <include file="$(find lam_challenge_sim)/launch/start_arena.launch" />

  <!-- 2. Load the robot's URDF onto the parameter server -->
  <param name="robot_description" textfile="$(find alfr3)/urdf/alfr3.urdf" />

  <!-- 3. Spawn the robot in Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
        args="-param robot_description -urdf -model alfr3
              -x 1.29 -y 0.38 -z 0.04
              -R 0 -P 0 -Y -3.12"
        output="screen"/>

  <!-- 4. Load joint controller configurations -->
  <rosparam file="$(find alfr3)/config/controllers.yaml" command="load"/>

  <!-- 5. Spawn controllers in the alfr3 namespace -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="diff_drive_controller joint_state_controller"/>

  <!-- 6. Publish TF for RViz -->
  <node name="robot_state_publisher" pkg="robot_state_publisher"
        type="robot_state_publisher" respawn="false" output="screen"/>
</launch>

