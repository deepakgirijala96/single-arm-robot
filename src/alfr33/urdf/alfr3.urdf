<?xml version="1.0"?>
<robot name="alfr3">

  <!-- Dummy root link -->
  <link name="dummy_link"/>
  <joint name="base_fixed_joint" type="fixed">
    <parent link="dummy_link"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ================= Base Link ================= -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.7"/>
      <inertia ixx="0.005" ixy="0" ixz="0"
               iyy="0.005" iyz="0"
               izz="0.005"/>
    </inertial>

    <visual>
      <geometry>
        <mesh filename="package://alfr3/meshes/base_link.STL"/>
      </geometry>
      <material name="Gazebo/Blue"/>
    </visual>

    <collision>
      <geometry>
        <mesh filename="package://alfr3/meshes/base_link.STL"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= Left Wheel ================= -->
  <link name="left_wheel">
    <inertial>
      <mass value="0.15"/>
      <inertia ixx="0.00012" ixy="0" ixz="0"
               iyy="0.00012" iyz="0" izz="0.00015"/>
    </inertial>

    <visual>
      <geometry>
        <mesh filename="package://alfr3/meshes/left_wheel.STL"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>

    <collision>
      <geometry>
        <mesh filename="package://alfr3/meshes/left_wheel.STL"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <!-- lifted slightly to align with right wheel -->
    <origin xyz="-0.06317 0.1103 0.02" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.5" friction="1.0"/>
    <limit effort="6.0" velocity="12.0"/>
  </joint>

  <!-- ================= Right Wheel ================= -->
  <link name="right_wheel">
    <inertial>
      <mass value="0.15"/>
      <inertia ixx="0.00012" ixy="0" ixz="0"
               iyy="0.00012" iyz="0" izz="0.00015"/>
    </inertial>

    <visual>
      <geometry>
        <mesh filename="package://alfr3/meshes/right_wheel.STL"/>
      </geometry>
      <material name="Gazebo/Black"/>
    </visual>

    <collision>
      <geometry>
        <mesh filename="package://alfr3/meshes/right_wheel.STL"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <!-- lowered slightly to align with left wheel -->
    <origin xyz="-0.06317 -0.1103 -0.02" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.5" friction="1.0"/>
    <limit effort="6.0" velocity="12.0"/>
  </joint>

  <!-- ================= Castor Wheel ================= -->
  <link name="castor_wheel">
    <inertial>
      <mass value="0.02"/>
      <inertia ixx="5e-6" ixy="0" ixz="0"
               iyy="5e-6" iyz="0" izz="5e-6"/>
    </inertial>

    <visual>
      <geometry>
        <mesh filename="package://alfr3/meshes/castor_wheel.STL"/>
      </geometry>
      <material name="Gazebo/Grey"/>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <joint name="castor_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="castor_wheel"/>
    <origin xyz="0.05883 0 -0.031" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="5.0" friction="0.2"/>
    <limit effort="0.5" velocity="6.0"/>
  </joint>

  <!-- ================= Camera ================= -->
  <link name="camera_link">
    <inertial>
      <mass value="1e-5"/>
      <inertia ixx="1e-6" ixy="0" ixz="0"
               iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>

    <visual>
      <geometry>
        <box size="0.01 0.03 0.03"/>
      </geometry>
      <material name="Gazebo/Grey"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.02 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.13 0 0.01" rpy="0 0.7 0"/>
  </joint>

  <!-- Gazebo Camera Sensor Plugin -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.396</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>30.0</updateRate>
        <cameraName>camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ================= Gazebo ros_control plugin ================= -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

</robot>

